{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.22/MicrosoftTeams.schema.json",
  "manifestVersion": "1.22",
  "version": "1.0.2",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Copilot Agent, Inc.",
    "websiteUrl": "https://www.example.com",
    "privacyUrl": "https://www.example.com/privacy",
    "termsOfUseUrl": "https://www.example.com/termofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "EchoAgent ${{APP_NAME_SUFFIX}}",
    "full": "EchoAgent"
  },
  "description": {
    "short": "EchoAgent",
    "full": "EchoAgent"
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "${{AGENT_ID}}",
      "scopes": [
        "copilot"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "copilot"
          ],
          "commands": [
            {
              "title": "Understand the ways in which the agent can help you.",
              "description": "What can you do?"
            }
          ]
        }
      ]
    }
  ],
  "copilotAgents": {
    "customEngineAgents": [
      {
        "id": "${{AGENT_ID}}",
        "type": "bot"
      }
    ]
  },
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": []
}